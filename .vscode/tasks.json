// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": [
				"$tsc-watch",
				"$ts-webpack-watch"
			],
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "serve",
			"problemMatcher": {
				"owner": "webpack",
				"severity": "error",
				"fileLocation": "absolute",
				"pattern": [
					{
						"regexp": "ERROR in [^ ]* (.*):(.*):(.*)",
						"file": 1,
						"line": 2,
						"column": 3
					},
					{
						"regexp": ".*",
						"message": 0
					}
				]
			},
			"label": "npm: serve",
			"detail": "webpack-dev-server"
		},
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": [ "$eslint-stylish" ],
			"label": "npm: lint",
			"detail": "eslint -c .eslintrc.js --ext .ts,.tsx src"
		}
	]
}
